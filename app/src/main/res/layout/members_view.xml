<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/member_imagev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"/>


<TextView
    android:id="@+id/member_tv1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:text="Display Name"
    android:layout_alignTop="@+id/member_imagev"
    android:layout_toEndOf="@+id/member_imagev"
    android:textColor="@android:color/black"
    android:textSize="18sp" />

<TextView
    android:id="@+id/member_tv2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/member_tv1"
    android:layout_below="@+id/member_tv1"
    android:layout_marginTop="10dp"
    android:text="Shape" />



    <ImageView
        android:id="@+id/member_imagev2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignTop="@+id/member_tv1"
        android:layout_toEndOf="@+id/member_imagev"
        android:visibility="invisible"
        app:srcCompat="@drawable/green_dot" />

</RelativeLayout>
